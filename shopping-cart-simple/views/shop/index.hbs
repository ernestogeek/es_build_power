{{#each products}}
<div class='row'>
    {{#each this}}
    <div class='col-sm-6 col-md-4 mt-5'>
        <div class="card text-center" style="height:600px;width: 18rem;">
            <img src="{{this.imagePath}}" class="img-responsive"
                alt="...">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{this.title}}</h5>
                <p class='description'>{{this.description}}</p>
                <div class='clearfix mt-auto'>
                    <div class='price pull-left'>${{this.price}}</div>
                    <a href="#" class="btn btn-dark pull-right"><i class="fa fa-plus"></i> Add to cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{/each}}