{
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "allowJs": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "outDir": "dist"
  },
  "exclude": ["./node_modules"]
}
